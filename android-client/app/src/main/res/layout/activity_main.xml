<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.josebiro.lampcontrol.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="5">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On"
            android:id="@+id/btn_lamp_on"
            android:onClick="LampWhiteOn"
            android:layout_gravity="center"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Off"
            android:id="@+id/btn_lamp_off"
            android:onClick="LampOff"
            android:layout_gravity="center"
            android:layout_margin="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_settings"
            android:src="@android:drawable/ic_menu_preferences"
            android:layout_gravity="center"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red"
            android:id="@+id/btn_red"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="center"
            android:singleLine="true"
            android:background="#ff0000"
            android:layout_margin="5dp"
            android:textColor="#FFD7FF" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:id="@+id/btn_blue"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:background="#0000ff"
            android:layout_margin="5dp"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green"
            android:id="@+id/btn_green"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center"
            android:background="#00ff00"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orange"
            android:id="@+id/btn_orange"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:background="#ff7f00"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indigo"
            android:id="@+id/btn_indigo"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:background="#4b0082"
            android:layout_margin="5dp"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="White"
            android:id="@+id/btn_white"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yellow"
            android:id="@+id/btn_yellow"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center"
            android:background="#ffff00"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Violet"
            android:id="@+id/btn_violet"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center"
            android:background="#8a2be2"
            android:layout_margin="5dp"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purple"
            android:id="@+id/btn_purple"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="center"
            android:background="#7f007f"
            android:layout_margin="5dp"
            android:textColor="#ffffff" />

        <com.rtugeek.android.colorseekbar.ColorSeekBar
            android:id="@+id/colorSlider"
            android:layout_width="wrap_content"
            app:colors="@array/material_colors"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="3"
            />
    </GridLayout>

</RelativeLayout>
